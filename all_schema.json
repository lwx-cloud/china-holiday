{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/lwx-cloud/china-holiday/main/all_schema.json",
  "type": "object",
  "properties": {
    "years": {
      "type": "object",
      "properties": {
        "start": { "type": "number", "description": "起始年份" },
        "end": { "type": "number", "description": "结束年份" }
      },
      "required": ["start", "end"],
      "description": "数据年份范围"
    },
    "papers": {
      "type": "array",
      "items": { "type": "string" },
      "description": "所用国务院文件网址列表"
    },
    "days": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "节日名称" },
          "date": { "type": "string", "description": "ISO 8601 日期" },
          "isOffDay": { "type": "boolean", "description": "是否为休息日" }
        },
        "required": ["name", "date", "isOffDay"]
      },
      "description": "所有年份的节假日数据"
    }
  },
  "required": ["years", "papers", "days"]
}
